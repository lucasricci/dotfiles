{
	"editor.fontFamily": "JetBrainsMono Nerd Font Mono",
	"editor.fontWeight": "500",
	"editor.fontSize": 16,
	"editor.lineHeight": 22,
	"editor.fontLigatures": true,
	"editor.letterSpacing": 0,

	"editor.wordWrap": "on",
	"workbench.iconTheme": "material-icon-theme",
	"editor.cursorBlinking": "phase",
	"breadcrumbs.filePath": "last",
	"breadcrumbs.enabled": true,
	"workbench.enableExperiments": false,
	"editor.minimap.renderCharacters": false,
	"editor.minimap.maxColumn": 100,
	"editor.minimap.showSlider": "always",

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"editor.formatOnSave": true,
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"black-formatter.args": ["--line-length=79"],
	"explorer.confirmDelete": false,
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.donotVerifyTags": true,
	"material-icon-theme.folders.color": "#42a5f5",
	"material-icon-theme.folders.theme": "classic",

	"extensions.ignoreRecommendations": true,
	"git.openRepositoryInParentFolders": "never",
	"discord.suppressNotifications": true,
	"discord.lowerDetailsEditing": "Workspace: {workspace} (Size: {file_size})",
	"discord.detailsIdling": "Calculating prime numbers...",
	"discord.largeImageIdling": "Calculating prime numbers...",
	"discord.detailsEditing": "Editing {file_name} â†’ {git_branch}"
}
